      display flex
      justify-content center

      .txFeeSummaryTotalUSD
        font-size 17px
        margin-top 1px

      .txFeeSummaryTimeContext, .txFeeSummarySymbol, .txFeeSummaryEquivalentSymbol
        font-size 16px
        margin-top 1px
        margin-left -1px

      .txFeeSummaryUSDSymbol
        font-size 13px
        margin-top 1px
        font-weight 600

      .txFeeSummarySymbol
        font-size 16px
        margin-right 2px
        font-weight 400
        margin-top 0px
        
      .txFeeSummaryEquivalentSymbol
        margin-left 2px

      .txFeeSummaryUSDSymbol
        margin-left 4px

      .txFeeSummaryTimeValue
        font-size 20px
        margin 0px 1px 0px 0px
        font-weight 400
        min-width 12px
        text-align right
        letter-spacing -2px

      .txFeeSummaryTimeUnit
        font-size 13px
        font-weight 500
        margin-top 0px
        margin-left 1px
      
    .txFeeSummaryLabel
      font-size 10px
      font-weight 400
      letter-spacing 1px
      margin-left 1px

