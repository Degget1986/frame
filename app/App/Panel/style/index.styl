.panel
  #panelPush
    right 0

#panelPush
  position absolute
  right -365px
  bottom 0
  top 0px
  width 360px
  transition standard

#panel
  position absolute
  top 0
  right 0
  bottom 0
  left 2px
  -webkit-app-region no-drag
  display flex
  flex-direction column
  justify-content center
  align-items center
  transition standardFast
  transform translate3d(370px, 0px, 0px)
  will-change transform

.panelSwoop
  position absolute
  display flex
  align-items flex-end
  top -1930px
  right -50px
  left -50px
  height 1500px
  opacity 0.3
  color spacewhite
  // z-index 99999999999999
  pointer-events none

.panelSwoopBottom
  position absolute
  display flex
  align-items flex-end
  bottom 750px
  right -50px
  left -50px
  height 1200px
  opacity 0.2
  color spacewhite
  // z-index 99999999999999
  pointer-events none

.panelRequest
  width 100%
  padding 10px
  display flex
  justify-content center
  align-items center
  flex-direction column

  .panelRequestBlock
    padding 10px 15px
    margin 15px
    border-radius 3px
    background white
    font-size 14px
    font-weight bold

.panelRequestGrant
  margin-top 40px
  padding-top 0px
  width 100%

.panelRequestGrantOption
  margin 15px
  padding 0px
  height 40px
  border-radius 20px
  display flex
  justify-content center
  align-items center
  background rgba(0, 0, 0, 0.08)
  -webkit-app-region no-drag

  &:hover
    background rgba(0, 0, 0, 0.78)

#panelTop
  position absolute
  top 0
  right 0
  left 0
  height 0

.panelBot
  padding 10px 10px 60px 10px
  display flex
  justify-content center
  margin-left 5px

  svg
    color rgba(0, 0, 50, 0.1)

.panelMenu
  position absolute
  left 1px
  right 1px
  top 0px
  height 45px
  padding 0px 5px 100px 5px
  // background blue
  display flex
  justify-content space-between
  align-items center
  -webkit-app-region no-drag
  z-index 10000
  opacity 1
  transform translate3d(0, 0, 0)
  // background linear-gradient(rgba(240, 240, 255, 0.5), rgba(240, 240, 255, 0))
  pointer-events none
  transition standard

  .panelMenuItem
    width 40px
    height 40px
    display flex
    justify-content center
    align-items center
    -webkit-app-region no-drag
    transition standard
    pointer-events auto
    transform translate3d(0, 0, 0)
    svg
      color outerspace
      transform translate3d(0, 0, 0)

    .panelMenuIconArrow
      margin 0px 0px 1px 1px
      min-width 5px
      max-width 5px
      transform translate3d(0, 0, 0)

  .panelDetail
    display flex
    align-items center
    margin-left 0%
    transition standardSlow

  .panelDetailText
    transition standard
    text-transform uppercase
    font-size 10px
    letter-spacing 1px
    font-weight bold
    color outerspace08
    display flex
    justify-content center
    align-items center
    // margin-top -1px
    font-weight 400
    padding-right 8px
    margin-right 8px
    
  .panelMenuData
    position absolute
    top 0px
    width 100px
    max-width 100px
    left 50%
    transition standard
    letter-spacing 0px
    text-transform uppercase
    color outerspace08
    display flex
    justify-content center
    align-items center
    font-weight 500
    font-size 11px
    height 16px
    border-radius 8px
    transform translate(-50px, 14px)

    .panelMenuDataDivide
      position absolute
      top 0
      bottom 0
      left 50%
      width 1px
      margin-left -1px
      background doubleThick

    .panelMenuDataItem
      display flex
      justify-content center
      align-items center
      padding 0px 5px 1px 5px

      .svg
        position relative
        padding-left 3px
        margin-top 1px

      .usd
        position relative
        margin-right 0px
        margin-top 1px

    .panelMenuDataItem:last-child
      margin-left 2px

  .panelDetailIndicator
    height 10px
    width 10px
    margin 10px 8px 10px 8px
    border-radius 5px
    display flex
    align-items center
    justify-content center

    .panelDetailIndicatorInner
      height 10px
      width 10px
      border-radius 100%

    .panelDetailIndicatorGood
      transition standardSlow
      background good

    .panelDetailIndicatorBad
      transition standardSlow
      background bad

    .panelDetailIndicatorPending
      transition standardSlow
      background pending

.panelMenuAddMode
  transition standard
  z-index 10000
  .panelDetail
    transition standardSlowest
    margin-left calc(50% - 50px)
  .panelMenuItem
    transition standard
    opacity 0
    pointer-events none
    svg
      color spacewhite
  .panelDetailText
    transition standard
    color spacewhite
  .panelDetailIndicator
    .panelDetailIndicatorGood
      transition standardSlow
      background smart
    .panelDetailIndicatorBad
      transition standardSlow
      background hot
    .panelDetailIndicatorPending
      transition standardSlow
      background hardware

.snipIt
  display flex
  flex-direction column
  justify-content center
  align-items center
  transform translateZ(0)
  margin 24px 10px 0px 10px
  background highlight
  padding 20px
  border-radius 16px
  font-size 13px
  font-weight 300

  @keyframes spin
    0% 
      transform rotate(0deg)
    100%
      transform rotate(360deg)

  @keyframes spinReverse
    0% 
      transform rotate(0deg)
    100%
      transform rotate(-360deg)

  .snipItBrowserExtensionIcons
    display flex
    justify-content center
    align-items center
    padding 20px
    color outerspace08
    .snipItBrowserExtensionIcon:hover
      background highlightest

    .snipItBrowserExtensionIcon
      display flex
      justify-content center
      align-items center
      background highlighter
      height 60px
      width 60px
      border 1px solid thick
      border-radius 16px
      margin 0px 5px
      box-shadow cardDrop // , 0px 4px 2px -3px rgba(0, 25, 35, 0.14)

    .snipItSpinRight
      svg
        transform rotate(0deg)
        animation spin 12s linear infinite 
    .snipItSpinLeft
      svg
        transform rotate(0deg)
        animation spinReverse 12s linear infinite 


